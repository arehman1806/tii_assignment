# Use the Unity CI image as the base image
FROM unityci/editor:ubuntu-2020.3.11f1-base-3

# Set environment variables
ENV ROS_DISTRO=humble
ENV LANG=en_US.UTF-8
ENV LC_ALL=en_US.UTF-8

# Set locale and install necessary packages
RUN apt-get update && \
    apt-get install -y locales && \
    locale-gen en_US en_US.UTF-8 && \
    update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8 && \
    apt-get install -y software-properties-common && \
    add-apt-repository universe

# Install necessary tools
RUN apt-get update && \
    apt-get install -y software-properties-common curl gnupg2 lsb-release

# Add the ROS 2 GPG key
RUN curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key | apt-key add - && \
    curl -sSL https://raw.githubusercontent.com/ros/rosdistro/master/ros.key -o /usr/share/keyrings/ros-archive-keyring.gpg

# Add the ROS 2 repository to sources list
RUN sh -c 'echo "deb [arch=$(dpkg --print-architecture)] http://packages.ros.org/ros2/ubuntu $(lsb_release -cs) main" > /etc/apt/sources.list.d/ros2-latest.list' && \
    sh -c 'echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/ros-archive-keyring.gpg] http://packages.ros.org/ros2/ubuntu $(. /etc/os-release && echo $UBUNTU_CODENAME) main" > /etc/apt/sources.list.d/ros2.list'

# Install necessary packages for ROS2 and dependencies
RUN apt-get update && apt-get upgrade -y && apt-get install -y \
    ros-${ROS_DISTRO}-desktop \
    ros-${ROS_DISTRO}-turtlebot3* \
    ros-${ROS_DISTRO}-navigation2 \
    ros-${ROS_DISTRO}-nav2-bringup \
    python3-colcon-common-extensions \
    python3-rosdep \
    && apt-get clean

# Initialize rosdep
RUN rosdep init && rosdep update

# Set up the workspace
WORKDIR /ros2_unity_ws

# Copy the workspace source code
COPY colcon_ws/src src
COPY Nav2SLAMExampleProject ./Nav2SLAMExampleProject

# Install dependencies and build the workspace
RUN /bin/bash -c "source /opt/ros/${ROS_DISTRO}/setup.bash && \
    apt-get update && \
    rosdep update && \
    rosdep install --from-paths src --ignore-src -r -y && \
    colcon build"


# Add sourcing commands to .bashrc
RUN echo "source /opt/ros/${ROS_DISTRO}/setup.bash" >> /root/.bashrc && \
    echo "source /ros2_unity_ws/install/setup.bash" >> /root/.bashrc

# Start a bash session
CMD ["bash"]